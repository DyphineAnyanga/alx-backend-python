#!/bin/bash

# kurbeScript - Setup and verify a local Kubernetes cluster using Minikube

set -e

echo "Checking if Minikube is installed..."

if ! command -v minikube &> /dev/null; then
    echo "âŒ Minikube is not installed. Please install it to continue."
    exit 1
fi

echo "âœ… Minikube is installed."

echo "ğŸš€ Starting Minikube cluster..."
minikube start

if ! command -v kubectl &> /dev/null; then
    echo "âŒ kubectl is not installed. Please install kubectl to continue."
    exit 1
fi

echo "ğŸ” Retrieving cluster info..."
kubectl cluster-info

echo "ğŸ“¦ Getting list of pods in default namespace..."
kubectl get pods --namespace=default

echo "âœ… Kubernetes cluster is running and ready!"
